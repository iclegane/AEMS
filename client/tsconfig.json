{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": "src",
    "outDir": "./dist",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["styles/*"]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"],
  },
  "include": [
    "typings/**/*.d.ts",
    "./node_modules/@types"
  ],
  "exclude": [
    "**/*.js"
  ]
}