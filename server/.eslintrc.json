{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "plugins": ["prettier", "import"],
  "rules": {
    "indent": "off",
    "eol-last": "error",
    "no-console": "off",
    "class-methods-use-this": "off",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "arrow-body-style": [
      "error",
      "always"
    ]
  }
}